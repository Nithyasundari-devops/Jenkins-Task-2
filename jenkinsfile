pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']], // Use your branch name
                    userRemoteConfigs: [[
                        url: 'https://github.com/Nithyasundari-devops/Jenkins-Task-2.git',
                        credentialsId: 'github-token' // Must match credential ID
                    ]]
                ])
            }
        }
        
        stage('Build') {
            steps {
                sh 'chmod +x hello.sh'
                sh './hello.sh'
            }
        }
    }
    
    post {
        always {
            emailext (
                subject: "Build ${currentBuild.result}: ${env.JOB_NAME}",
                body: "See: ${env.BUILD_URL}",
                to: 'nithyasundari277@gmail.com' // Your actual email
            )
        }
    }
}
